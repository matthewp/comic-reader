---
title: comic-reader
---
<!doctype html>
<html lang="en">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ title }}</title>
<link rel="stylesheet" href="{{ '/styles/main.css' | relUrl(page.url) }}">
{% if id == 'home' %}
<link rel="stylesheet" href="{{ '/styles/home.css' | relUrl(page.url) }}">
{% endif %}
<link rel="stylesheet" href="{{ '/styles/prism-theme.css' | relUrl(page.url) }}">
<link rel="apple-touch-icon" sizes="180x180" href="{{ '/images/apple-touch-icon.png' | relUrl(page.url) }}">
<link rel="icon" type="image/png" sizes="32x32" href="{{ '/images/favicon-32x32.png' | relUrl(page.url) }}">
<link rel="icon" type="image/png" sizes="16x16" href="{{ '/images/favicon-16x16.png' | relUrl(page.url) }}">
<link rel="manifest" href="{{ '/site.webmanifest' | relUrl(page.url) }}">
{% if includeReader %}
<script type="module" src="https://unpkg.com/comic-reader@0.6.2/mod.js"></script>
{% endif %}
{%- for script in scripts %}
<script type="module" src="{{ script }}"></script>
{%- endfor -%}
{%- for link in preloadImage -%}
<link rel="preload" as="image" href="{{ link }}">
{%- endfor -%}

<body{% if id %} id="{{ id }}"{% endif %} class="home">

<header class="content container">
  <h1>&lt;comic-reader&gt;</h1>
  <h2>An element that makes it easy to embed comics on your site</h2>
</header>

<nav class="container">
  <ul>
    {%- for post in collections.page -%}
      <li{% if page.url == post.url %} class="active"{% endif %}>
        {% if page.url == post.url %}
          {% if post.data.shortTitle %}
            {{ post.data.shortTitle }}
          {% else %}
            {{ post.data.title }}
          {% endif %}
        {% else %}
        <a href="{{ post.url | relUrl(page.url) }}">
          {% if post.data.shortTitle %}
            {{ post.data.shortTitle }}
          {% else %}
            {{ post.data.title }}
          {% endif %}
        </a>
        {% endif %}
      </li>
    {%- endfor -%}
    <li><a href="https://github.com/matthewp/comic-reader">GitHub</a></li>
  </ul>
</nav>

<main>
  <div class="content container">
    {{ content | safe }}
  </div>
</main>

<footer class="container">
  <div class="footer-content">
