{
  "name": "comic-reader",
  "version": "0.6.2",
  "description": "A comic reader web component",
  "type": "module",
  "exports": {
    ".": "./dist/reader.js"
  },
  "source": "src/index.js",
  "scripts": {
    "build": "wireit",
    "server": "wireit",
    "test": "wireit"
  },
  "files": [
    "mod.js",
    "zipsource.js",
    "browser.js",
    "libarchive.js"
  ],
  "keywords": [
    "comics",
    "comic book",
    "web component"
  ],
  "author": "Matthew Phillips <matthew@matthewphillips.info>",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "libarchive.js": "^1.0.1",
    "microbundle": "^0.15.1",
    "node-qunit-puppeteer": "^1.0.13",
    "serve": "^14.2.0"
  },
  "wireit": {
    "build": {
      "command": "microbundle -f modern --no-compress",
      "files": [
        "src/**/*"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "server": {
      "command": "serve -p 1938",
      "service": {
        "readyWhen": {
          "lineMatches": "Accepting connections"
        }
      }
    },
    "test": {
      "command": "node ../node_modules/@matthewp/node-qunit-puppeteer/cli.js http://localhost:1938/test/test.html",
      "dependencies": [
        "build",
        "server"
      ]
    }
  }
}
